@model List<ProyectoPr1mal.Models.ClienteTablaViewModels.ClienteUserTablaViewModel>
@{
    ViewBag.Title = "Datos cliente";
}

<h2>DatosCliente</h2>
<div class="row">
    <div class="col-lg-12">
        <input type="button" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/ClienteUser/RegistroClientes")'" value="Nuevo Registro" />
    </div>
</div>
<br />
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Fecha de nacimiento</th>
                <th>Genero</th>
                <th>Edad</th>
                <th>Celular</th>
                <th>Direccion</th>
                <th>Registro</th>
                <th>Nip</th>
                <th>Email</th>
            </tr>

            @foreach (var oDatos in Model)
            {
                <tr>
                    <td>@oDatos.Id</td>
                    <td>@oDatos.Nombre</td>
                    <td>@oDatos.Nacimiento</td>
                    <td>@oDatos.Genero</td>
                    <td>@oDatos.Edad</td>
                    <td>@oDatos.Celular</td>
                    <td>@oDatos.Direccion</td>
                    <td>@oDatos.Registro</td>
                    <td>@oDatos.Nip</td>
                    <td>@oDatos.Email</td>
                    <td>
                        <input onclick="jsDelete(@oDatos.Id);" type="button" value="Eliminar" class="btn btn-danger" />
                        <input onclick="document.location.href='@Url.Content("~/ClienteUser/EditarCliente/"+oDatos.Id)'" type="button" value="Editar" class="btn btn-default" />
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<script>
    function jsDelete(Id) {
        if (confirm("Estas seguro de eliminar el usuario")) {
            url = "@Url.Content("~/ClienteUser/EliminarCliente")" + "/" + Id;

            $.post(url, function (data) {
                if (data == "1") {
                    document.location.href = "@Url.Content("~/User/")"
                } else {
                    alert("Ocurrio un error")
                }
            })
        }
    }
</script>